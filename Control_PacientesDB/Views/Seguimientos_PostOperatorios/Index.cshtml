@model IEnumerable<Control_PacientesDB.Models.Seguimientos_PostOperatorios>

@{
    ViewData["Title"] = "Seguimientos";
}

<h1>Seguimientos Post-Operación</h1>

<p>
    <a asp-action="Create" class="create-button">Registrar nuevo seguimiento</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Medico
            </th>
            <th>
                Paciente
            </th>
            <th>
                Medicamento
            </th>
            <th>
                Fecha de Control
            </th>
            <th>
                Programacion de Proxima Cita
            </th>
            <th>
                Observaciones
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Medico.NombreCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paciente.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medicamentos.Nombre_Medicamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_Control)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Programacion_ProximaCita)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observaciones)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Codigo_seguimiento">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Codigo_seguimiento">Detalles</a>
            </td>
        </tr>
}
    </tbody>
</table>
